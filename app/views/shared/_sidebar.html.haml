.sidebar
  .sidebar__header
    %p
      = current_user.name
    %ul
      %li
      = link_to "", new_group_path, class: "fa fa-pencil-square-o icon"
      %li
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'
  .sidebar__groups
    - @groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group--name
            = group.name
          .group--message
            = group.show_last_message
