.sidebar
  .sidebar__header
    %p
      = current_user.name
    %ul
      %li
      = link_to "", "groups/new", class: "fa fa-pencil-square-o icon"
      %li
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'
  .sidebar__groups
    - @groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group--name
            = group.name
          .group--message
            latest message
.chat
  .chat__header
    .chat__header__left
      .chat__header__left__group-name
        group name
      .chat__header__left__members
        Member: current_user_name member0_name member1_name ...
    .chat__header__btn
      = link_to "Edit", "groups/#{:id}/edit", class: "btn"
  .chat__messages
    -# = messages.each do |message|
    .message
      %ul.message__lists
        %li.message__lists__list#user-name
          user name
        %li.message__lists__list#date
          yyyy/mm/dd hh:ss
      %p.message--body
        body text
    -# end
  .chat__form
    %form.chat__form__form
      %input{type: "text", placeholder: "type a message", class: "chat__form__form--message"}
      %label{class: "fa fa-picture-o icon"}
        %input{type: "file", class: "hidden"}
      %input{value: "Send", type: "submit", class: "chat__form__form--btn"}
